<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.MemberDao">

    <!-- 결과 레코드의 컬럼 값을 자바 객체에 어떻게 담을 것인지 설정한다. -->
    <resultMap type="member" id="memberMap">
        <id     column="mno"    property="no"/>
        <result column="nick"         property="nick"/>
        <result column="name"         property="name"/>
        <result column="phone_number"        property="phoneNumber"/>
        <result column="password"     property="password"/>
        <result column="filepath"        property="photo"/>
    </resultMap>

    <insert id="insert" parameterType="member" useGeneratedKeys="true" keyColumn="board_no" keyProperty="no">
        insert into sns_member(nick,name,phone_number,password,filepath)
        values(#{nick},#{name},#{phoneNumber},sha1(#{password}),#{photo})
    </insert>

    <select id="findAll" resultMap="memberMap">
        select
        mno,
        nick,
        name,
        phone_number,
        filepath
        from
        sns_member
        order by
        name asc
    </select>

    <select id="findBy" parameterType="int" resultMap="memberMap">
        select
        mno,
        nick,
        name,
        phone_number,
        filepath
        from
        sns_member
        where
        mno=#{no}
    </select>

    <select id="findByPhoneNumberAndPassword" resultMap="memberMap">
        select
        mno,
        nick,
        name,
        phone_number,
        filepath
        from
        sns_member
        where
        phone_number=#{phoneNumber}
        and password=sha1(#{password})
    </select>

    <update id="update" parameterType="member">
        update sns_member set
        nick=#{nick}
        ,name=#{name}
        ,phone_number=#{phoneNumber}
        <if test="password != null and password.length() != 0">
            ,password=sha1(#{password})
        </if>
        <if test="photo != null">
            ,filepath=#{photo}
        </if>
        where
        mno=#{no}
    </update>

    <delete id="delete" parameterType="int">
        delete from sns_member
        where
        mno=#{no}
    </delete>

    <select id="countByTel" parameterType="string">
        select count(*)
        from sns_member
        where phone_number = #{phoneNumber}
    </select>
</mapper>





